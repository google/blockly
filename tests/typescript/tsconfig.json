{
  "include": ["src/**/*"],
  "compilerOptions": {
    "allowJs": false,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "blockly-test/*": ["../../dist/*"]
    },

    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,

    "module": "ES2015",
    "moduleResolution": "node",
    "target": "ES2020",
    "strict": true
  }
}
